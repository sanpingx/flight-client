{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@": ["/src"],
      "@components": ["/src/components"],
      "@pages": ["/src/pages"],
      "@assets":["/src/assets"],
      "@constants": ["/src/constants"],
      "@styles": ["/src/styles"],
      "@types": ["/src/types"],
      "@config": ["/src/config"],
      "@api": ["/src/api"],
      "@@": [""],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}